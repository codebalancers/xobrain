{
  "name": "xobrain",
  "version": "1.0.0",
  "description": "Contextual desktop wiki",
  "author": "Arne Bosien",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codebalancers/xobrain"
  },
  "private": true,
  "main": "./main.js",
  "scripts": {
    "postinstall": "npm run electron:rebuild",
    "clean": "ionic-app-scripts clean",
    "lint": "ionic-app-scripts lint",
    "ionic:build": "ionic-app-scripts build",
    "ionic:build.prod": "ionic-app-scripts build --prod",
    "ionic:build.w": "ionic-app-scripts serve",
    "ionic:serve": "ionic-app-scripts serve",
    "electron:build": "tsc -t es5 --lib dom,es2015 main.ts",
    "electron:build.w": "tsc -w -t es5 --lib dom,es2015  main.ts",
    "electron:rebuild": "electron-rebuild -f -w sqlite3",
    "build.dev.w": "concurrently --kill-others \"npm run ionic:build.w\" \"npm run electron:build.w\"",
    "build.dev": "npm run ionic:build && npm run electron:build",
    "build.prod": "npm run ionic:build.prod && npm run electron:build",
    "app": "electron .",
    "start": "npm run build.dev && electron",
    "package-mac": "electron-builder build --mac",
    "package-win": "electron-builder build --windows",
    "package-linux": "electron-builder build --linux",
    "package-mac-dmg": "npm run package-mac && npm run create-installer-mac"
  },
  "dependencies": {
    "knex": "^0.14.4",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/cli": "~1.7.3",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@ionic-native/core": "4.5.3",
    "@ionic-native/splash-screen": "4.5.3",
    "@ionic-native/status-bar": "4.5.3",
    "@ionic/app-scripts": "3.1.8",
    "@ionic/storage": "2.1.3",
    "@types/d3": "^5.0.0",
    "@types/knex": "^0.14.9",
    "@types/marked": "^0.3.0",
    "@types/simplemde": "^1.11.7",
    "concurrently": "^3.5.0",
    "core-js": "^2.4.1",
    "d3": "^5.0.0",
    "electron": "1.8.4",
    "electron-builder": "^20.8.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-rebuild": "^1.7.3",
    "ionic-angular": "3.9.2",
    "ionic-tooltips": "^2.0.1",
    "ionicons": "3.0.0",
    "marked": "^0.3.18",
    "rxjs": "5.5.7",
    "simplemde": "^1.11.2",
    "sw-toolbox": "3.6.0",
    "tslint": "^5.9.1",
    "typescript": "~2.6.2",
    "zone.js": "0.8.20"
  }
}
