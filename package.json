{
  "name": "exobrain",
  "version": "1.0.0",
  "description": "Contextual desktop wiki",
  "author": "Arne Bosien",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.arnebosien.de/arne/exobrain"
  },
  "private": true,
  "scripts": {
    "clean": "ionic-app-scripts clean",
    "lint": "ionic-app-scripts lint",
    "ionic:build": "ionic-app-scripts build",
    "ionic:build.w": "ionic-app-scripts serve",
    "ionic:serve": "ionic-app-scripts serve",
    "electron:build": "tsc -t es5 --lib dom,es2015 main.ts",
    "electron:build.w": "tsc -w -t es5 --lib dom,es2015  main.ts",
    "electron:rebuild": "electron-rebuild -f -w sqlite3",
    "build.dev.w": "concurrently --kill-others \"npm run ionic:build.w\" \"npm run electron:build.w\"",
    "build.dev": "npm run ionic:build && npm run electron:build",
    "build.prod": "npm run ionic:build && npm run electron:build",
    "runApp": "electron main.js",
    "start": "npm run build.dev && electron main.js",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/windows/icon.ico --prune=true --out=release-builds --version-string.CompanyName='CE' --version-string.FileDescription='CE' --version-string.ProductName='Exobrain'",
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/exobrain-darwin-x64/exobrain.app exobrain-app --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "package-mac-dmg": "npm run package-mac && npm run create-installer-mac"
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@ionic-native/core": "4.5.3",
    "@ionic-native/splash-screen": "4.5.3",
    "@ionic-native/status-bar": "4.5.3",
    "@ionic/storage": "2.1.3",
    "core-js": "^2.4.1",
    "d3": "^5.0.0",
    "ionic-angular": "3.9.2",
    "ionicons": "3.0.0",
    "knex": "^0.14.4",
    "rxjs": "5.5.7",
    "sqlite3": "^4.0.0",
    "sw-toolbox": "3.6.0",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@ionic/app-scripts": "3.1.8",
    "@types/d3": "^5.0.0",
    "@types/knex": "^0.14.9",
    "concurrently": "^3.5.0",
    "electron": "1.8.4",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^11.1.0",
    "electron-rebuild": "^1.7.3",
    "tslint": "^5.9.1",
    "typescript": "~2.6.2"
  }
}
